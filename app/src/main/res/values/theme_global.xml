<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏样式-->
    <attr name="StyleTitleBar" format="reference" />

    <!--App启动属性-->
    <style name="ThemeApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!--隐藏默认的标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!--window背景-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--启动时隐藏状态栏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--基础主题,包含所有属性,防止运行时属性缺少导致报错-->
    <style name="ThemeBase" parent="ThemeApp">
        <!--窗口背景-->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="StyleTitleBar">@style/StyleTitleBarImplDefault</item>
    </style>

    <!--默认白色主题-->
    <style name="ThemeShowDefault" parent="ThemeBase" />

    <!--透明主题-->
    <style name="ThemeShowTrans" parent="ThemeBase">
        <!--window背景-->
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="StyleTitleBar">@style/StyleTitleBarImplTrans</item>
    </style>

</resources>
